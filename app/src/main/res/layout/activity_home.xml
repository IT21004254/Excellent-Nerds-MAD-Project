<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:background="@color/BackgroundColor"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="30sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:background="#c0c0c0" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="297dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:text="Select Doctor"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_oto"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:layout_marginLeft="10dp"
                android:text="OTOLARYNGOLOGIST" />


            <Button
                android:id="@+id/btn_oyo"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:layout_marginLeft="10dp"
                android:text="OYOPEDIC SERGEON" />


            <Button
                android:id="@+id/btn_den"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:layout_marginLeft="10dp"
                android:text="DENTIST" />


            <Button
                android:id="@+id/btn_obs"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:layout_marginLeft="10dp"
                android:text="OBSTETRICIAN GYNECOLOGYST(VOG)" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="297dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:text="Select Test"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Select Your Test" />

            <Button
                android:id="@+id/btn_full"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:layout_marginLeft="10dp"
                android:onClick="FullBlood_btn"
                android:text="FULL BLOOD COUNT"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/btn_fast"
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:layout_marginLeft="10dp"

                android:text="FASTING BLOOD SUGAR" />

            <Button
                android:id="@+id/btn_urea"
                android:layout_width="224dp"
                android:layout_height="wrap_content"

                android:layout_marginVertical="3dp"
                android:layout_marginLeft="10dp"
                android:text="UREA ELECTROLYTES" />

            <Button
                android:id="@+id/btn_ecg"
                android:layout_width="227dp"
                android:layout_height="44dp"

                android:layout_marginVertical="3dp"
                android:layout_marginLeft="10dp"
                android:text="ECG" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">



    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>